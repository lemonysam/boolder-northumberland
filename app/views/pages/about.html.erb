<div class="bg-warm-gray-50 mt-4 sm:mt-16">

  <section>
    <div class="mx-auto max-w-7xl py-8 px-6 lg:px-8">
      <h2 class="text-3xl font-bold tracking-tight text-warm-gray-900">
        <%= t("views.about.project.title") %>
      </h2>
      
      <p class="mt-6 max-w-3xl text-lg text-warm-gray-500">
        <%= t("views.about.project.p1_html", link: link_to("Boolder", "https://www.boolder.com", class: "font-medium underline text-amber-600")) %>
      </p>
      
      <p class="mt-6 max-w-3xl text-lg text-warm-gray-500">
        <%= t("views.about.project.p2_html") %>
      </p>

    </div>
  </section>

    <section>
      <div class="mx-auto max-w-7xl py-8 px-6 lg:px-8">
        <h2 class="text-3xl font-bold tracking-tight text-warm-gray-900">
          <%= t("views.about.team.title") %>
        </h2>

        <div class="mt-12 space-y-12 text-center">
          <ul role="list" class="mx-auto space-y-16 sm:grid sm:grid-cols-2 sm:gap-16 sm:space-y-0 lg:max-w-5xl lg:grid-cols-4">
            <li>
              <div class="space-y-6">
                <%= image_tag "team-sam.jpg", class: "mx-auto h-40 w-40 rounded-full xl:h-48 xl:w-48" %>
                <div class="space-y-2">
                  <div class="space-y-1 text-lg font-medium leading-6">
                    <h3>Sam</h3>
                  </div>
                </div>
              </div>
          </li>
          <li>
            <div class="space-y-6">
              <%= image_tag "team-ian.jpg", class: "mx-auto h-40 w-40 rounded-full xl:h-48 xl:w-48" %>
              <div class="space-y-2">
                <div class="space-y-1 text-lg font-medium leading-6">
                  <h3>Ian</h3>
                </div>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </section>

  <section>
    <div class="mx-auto max-w-7xl py-8 px-6 lg:px-8">
      <h2 class="text-3xl font-bold tracking-tight text-warm-gray-900">
        <%= t("views.about.open.title") %>
      </h2>
      <p class="mt-6 max-w-3xl text-lg text-warm-gray-500">
        <%= t("views.about.open.p1_html", link: link_to("GitHub", "https://github.com/lemonysam/boolder-northumberland", class: "font-medium underline text-amber-600")) %>
      </p>
      <p class="mt-6 max-w-3xl text-lg text-warm-gray-500">
        <%= t("views.about.open.p2_html", link: link_to(t("views.about.open.contribute_link"), contribute_path, class: "font-medium underline text-amber-600")) %>
      </p>
    </div>
  </section>


<div class="pt-4 pb-8" id="web_dev">
  <div class="mx-auto max-w-md px-6 sm:max-w-3xl lg:max-w-7xl lg:px-8">
    <%= render "dev_banner" %>
  </div>
</div>

<div class="bg-warm-gray-50">

  <section id="contact">
    <div class="mx-auto max-w-7xl py-8 px-6 lg:px-8">
      <h2 class="text-3xl font-bold tracking-tight text-warm-gray-900">
        <%= t("views.about.contact.title") %>
      </h2>
      <p class="mt-6 max-w-3xl text-lg text-warm-gray-500">
        <%= t("views.about.contact.p1") %> <%= link_to "hello@climbin.co.uk", "mailto:hello@climbin.co.uk", class: "font-medium underline text-amber-600" %>.
      </p>
    </div>
  </section>

  <section>
    <div class="mx-auto max-w-7xl py-8 px-6 lg:px-8">
      <h2 class="text-3xl font-bold tracking-tight text-warm-gray-900">
        <%= t("views.about.history.title") %>
      </h2>
      
      <p class="mt-6 max-w-3xl text-lg text-warm-gray-500">
        <%= t("views.about.history.p1") %>
      </p>
      
      <p class="mt-6 max-w-3xl text-lg text-warm-gray-500">
        <%= t("views.about.history.p2") %>
      </p>

      <p class="mt-6 max-w-3xl text-lg text-warm-gray-500">
        <%= t("views.about.history.p3") %>
      </p>

      <p class="mt-6 max-w-3xl text-lg text-warm-gray-500">
        <%= t("views.about.history.p4") %>
      </p>
    </section>

  <section id="support">
    <div class="mx-auto max-w-7xl py-8 px-6 lg:px-8">
      <h2 class="text-3xl font-bold tracking-tight text-warm-gray-900">
        <%= t("views.about.support.title") %>
      </h2>
      <p class="mt-6 max-w-3xl text-lg text-warm-gray-500">
        <%= t("views.about.support.p1") %>
      </p>

      <p class="mt-6 max-w-3xl text-lg text-warm-gray-500">
        <%= t("views.about.support.p2") %>
      </p>
      <p class="mt-6 max-w-3xl text-lg text-warm-gray-500">
        <%= t("views.about.support.p3") %>
      </p>
    </div>
  </section>

  <!-- This example requires Tailwind CSS v3.0+ -->
  <div class="mx-auto max-w-7xl py-8 px-6 lg:px-8">
    <h2 class="text-3xl font-bold tracking-tight text-warm-gray-900">
      <%= t("views.about.faq.title") %>
    </h2>
    <dl class="space-y-10 my-8">
      <div>
        <dt class="text-base font-semibold leading-7 text-gray-900">
          <%= t("views.about.faq.data.question") %>
        </dt>
        <dd class="mt-2 text-base leading-7 text-gray-600">
          <%= t("views.about.faq.data.p1") %>
          <br>
          <%= t("views.about.faq.data.p2_html", quiet_county: link_to("The Quiet County", "https://www.facebook.com/groups/530787031093350/?locale=en_GB", class: "font-medium underline text-amber-600"), climbonline: link_to("climbonline.co.uk", "https://climbonline.co.uk/climbing-topos/", class: "font-medium underline text-amber-600")) %>
        </dd>
      </div>

      <div>
        <dt class="text-base font-semibold leading-7 text-gray-900">
          <%= t("views.about.faq.why_free.question") %>
        </dt>
        <dd class="mt-2 text-base leading-7 text-gray-600">
          <%= t("views.about.faq.why_free.p1") %>
          <br>
          <%= t("views.about.faq.why_free.p2") %>
        </dd>
      </div>

      <div>
        <dt class="text-base font-semibold leading-7 text-gray-900">
          <%= t("views.about.faq.privacy.question") %>
        </dt>
        <dd class="mt-2 text-base leading-7 text-gray-600">
          <%= t("views.about.faq.privacy.p1_html", link: link_to(t("views.about.faq.privacy.policy"), privacy_path, class: "font-medium underline text-amber-600")) %>
        </dd>
      </div>
    </dl>
  </div>

</div>